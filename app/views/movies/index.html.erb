  -->
  <%= link_to "Add a new movie", new_movie_path %>
</div>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      Title
    </th>

    <th>
      Description
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @movies.each do |movie| %>
  <tr>
    <td>
      <%= movie.id %>
    </td>

    <td>
      <%= movie.title %>
    </td>

    <td>
      <%= movie.description %>
    </td>

    <td>
      <%= time_ago_in_words(movie.created_at) %> ago
    </td>
    <td>
      <%= time_ago_in_words(movie.updated_at) %> ago
    </td>

    <td>
    <!--
      <a href="<%= movie_path(movie.id) %>">
        Show details
      </a>

      ALL CONVENTIONS MUST BE IN PLACE!! (_paths, link_to ,ect) ALL MUST WORK FOR THIS LINE OF CODE TO WORK! CHECK /rails/info FOR PATHS
      -->
      <%= link_to "Show details", movie %>
    </td>
  </tr>
  <% end %>
</table>
